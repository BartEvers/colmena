{
  "name": "Core",
  "plural": "Core",
  "description": "Core: Colmena Core model",
  "base": "Model",
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": [
        "getDatasources",
        "getModules",
        "ping"
      ]
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "system-admin",
      "permission": "ALLOW",
      "property": [
        "getDatasources",
        "getModules",
        "ping"
      ]
    }
  ],
  "methods": {
    "getDatasources": {
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Show the datasources loaded by the API",
      "http": {
        "path": "/datasources",
        "verb": "get"
      }
    },
    "getDomains": {
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "List the domains hosted by the API",
      "http": {
        "path": "/domains",
        "verb": "get"
      }
    },
    "getSettings": {
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "List the public settings hosted by the API",
      "http": {
        "path": "/settings",
        "verb": "get"
      }
    },
    "getModules": {
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Show the modules loaded by the API",
      "http": {
        "path": "/modules",
        "verb": "get"
      }
    },
    "ping": {
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Ping the API to retrieve its internal state",
      "http": {
        "path": "/ping",
        "verb": "get"
      }
    }
  }
}
