{
  "name": "Domain",
  "plural": "CoreDomains",
  "description": "System: Manage Domains and related content",
  "base": "SystemBaseModel",
  "componentPackage": "@colmena/module-api-system/common/models/system-domain/",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "String",
      "id": true,
      "required": true
    },
    "name": {
      "type": "String",
      "required": true
    },
    "email": {
      "type": "String",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "settings": {
      "type": "hasMany",
      "model": "SystemSetting",
      "polymorphic": "reference",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": "__get__settings"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "__get__settings"
    }
  ],
  "methods": {
    "prototype.init": {
      "accepts": [],
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Initialize a domain",
      "http": {
        "path": "/init",
        "verb": "get"
      }
    },
    "prototype.importFileByUrl": {
      "accepts": [
        {
          "arg": "url",
          "type": "String",
          "required": true
        },
        {
          "arg": "fileName",
          "type": "String",
          "required": false
        }
      ],
      "returns": {
        "arg": "result",
        "type": "Object",
        "root": true
      },
      "description": "Import a file by URL",
      "http": {
        "path": "/importFileByUrl",
        "verb": "post"
      }
    }
  }
}
